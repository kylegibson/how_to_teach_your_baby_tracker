- extends 'base.haml'

- block extrahead
    :css
        @media (max-width: 480px) {
            .item {
                padding: 0.5em;
            }
        }


- block body
    .words
        - for group in word_groups
            .panel.panel-default
                .panel-heading
                    Word Group
                    {{ group.id }}
                .panel-body
                    .row
                        .col-md-2.item
                            %a.btn.btn-primary.btn-block{
                                href: '{% url "words:mark_group_viewed" group.id %}',
                            }
                                Mark All
                        - for word in group.words.all
                            .col-md-2.item
                                %a.btn.btn-default.btn-block{
                                    href: '{% url "words:mark_word_viewed" word.id %}',
                                }
                                    {{ word }}
